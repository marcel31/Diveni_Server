{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["xo", "prettier"],
    "overrides": [
        {
            "extends": ["xo-typescript", "prettier"],
            "files": ["*.ts"],
            "rules": {
                "no-unused-vars": "warn",
                "@typescript-eslint/consistent-type-definitions": [
                    "error",
                    "interface"
                ],
                "new-cap": [
                    "error",
                    {
                        "capIsNewExceptions": ["Router"]
                    }
                ]
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {},
    "exclude": ["node_modules", "dist", "cypress"]
}
